{% extends 'base.html.twig' %}

{% block title %}Color index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-4 mb-4">Liste des Couleurs</h1>

        <div class="row">
            <div class="col">
                {% if colors is not empty %}
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for color in colors %}
                                <tr>
                                    <td>{{ color.id }}</td>
                                    <td>{{ color.name }}</td>
                                    <td>
                                        <a href="{{ path('app_colors_show', {'id': color.id}) }}" class="btn btn-info btn-sm">Details</a>
                                        <a href="{{ path('app_colors_edit', {'id': color.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p class="lead">Aucune couleur trouvée.</p>
                {% endif %}
            </div>
        </div>

        <div class="row mt-4">
            <div class="col">
                <a href="{{ path('app_colors_new') }}" class="btn btn-success">Créer une nouvelle couleur</a>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col">
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-success">Retourner au Dashboard</a>
            </div>
        </div>
    </div>
{% endblock %}
