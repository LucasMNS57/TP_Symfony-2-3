{% extends 'base.html.twig' %}

{% block title %}Type index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-4 mb-4">Liste des Types</h1>

        <div class="row">
            <div class="col">
                {% if types is not empty %}
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for type in types %}
                                <tr>
                                    <td>{{ type.id }}</td>
                                    <td>{{ type.name }}</td>
                                    <td>
                                        <a href="{{ path('app_types_show', {'id': type.id}) }}" class="btn btn-info btn-sm">Details</a>
                                        <a href="{{ path('app_types_edit', {'id': type.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p class="lead">Aucun type trouvé.</p>
                {% endif %}
            </div>
        </div>

        <div class="row mt-4">
            <div class="col">
                <a href="{{ path('app_types_new') }}" class="btn btn-success">Créer un nouveau type</a>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col">
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-success">Retourner au Dashboard</a>
            </div>
        </div>
    </div>
{% endblock %}
